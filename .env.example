# Database Configuration (PostgreSQL - Neon Database recommended for Railway)
DATABASE_URL=postgresql://usuario:password@host/database?sslmode=require

# Server Configuration
# Railway assigns PORT automatically in production, don't set it there
PORT=5000

# Session Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-this-to-a-random-secret-key-in-production

# Environment (development | production)
# Railway sets this automatically to 'production'
NODE_ENV=development
